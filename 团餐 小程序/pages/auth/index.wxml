<!--pages/index/auth.wxml-->
<view class='auth-box'>
  <view class='top-background'>
    <view class='top-avatar' style='background-image:url({{options.shoplogo}})'></view>
  </view>
  <view class='mid-text'>
    <text class='mid-text-title'>{{options.shopname}}申请获得以下权限:</text>
    <view class='mid-text-content'>
      <text class='content-icon'></text>
      <text>获取您的公开信息 (昵称 、头像等)</text>
    </view>
  </view>
  <view class='bottom-button'>
    <button disabled="{{modelShow}}" bindgetuserinfo="userinfo"  openType="getUserInfo">确定</button>
  </view>
</view>

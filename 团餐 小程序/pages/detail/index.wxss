/* pages/high-tea/detail/detail.wxss */

page {
  height: 100%;
}

.high-tea-page-detail {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.btn-submit {
  background: linear-gradient(90deg, rgba(7, 215, 101, 1) 0%, rgba(52, 209, 118, 1) 100%);
}

.btn-submit.van-button--disabled {
  background: rgba(204, 204, 204, 1);
  border-color: rgba(204, 204, 204, 1);
}

.bar-submit .van-submit-bar__text {
  text-align: left;
  padding-left: 30rpx;
  font-size: 30rpx;
}

.bar-submit .van-submit-bar__text text {
  color: #fb8836;
  font-size: 30rpx;
}

.bar-submit .van-submit-bar__currency {
  font-size: 30rpx;
}

.info-group .title {
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  font-size: 30rpx;
}

.info-group {
  padding: 12rpx 0 26rpx;
}

.info-group .com-cell-body {
  justify-content: flex-end;
}

.info-group .com-cell-body image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.main {
  margin-top: 18rpx;
  display: flex;
  flex: 1;
  padding-bottom: 50px;
}

.isIpx {
  padding-bottom: 84px;
}

.main .left {
  background: rgba(246, 247, 249, 1);
  width: 220rpx;
  flex-shrink: 0;
  overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.main .left .tree .item {
  position: relative;
  height: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
  line-height: 100rpx;
  padding: 0 20rpx;
}

.main .left .tree .item.active {
  color: rgba(52, 209, 118, 1);
  background: #fff;
}

.main .left .tree .item.active::after {
  position: absolute;
  content: "";
  width: 4rpx;
  height: 30rpx;
  background: rgba(52, 209, 118, 1);
  border-radius: 2rpx;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}

.main .right {
  background: #fff;
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.main .right .com-cell-head image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.main .right .right-title {
  padding: 20rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(52, 209, 118, 1);
  line-height: 40rpx;
}

.main .right .com-cell {
  padding: 15rpx 20rpx;
}

.main .right .com-cell .com-cell-body {
  flex-direction: column;
  overflow: hidden;
  justify-content: space-between;
}

.main .right .com-cell .com-cell-body>view {
  width: 100%;
}

.main .right .com-cell .com-cell-body .title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main .right .com-cell .com-cell-body .subtitle {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(154, 155, 166, 1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main .right .com-cell .com-cell-body .params {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main .right .com-cell .com-cell-body .params .units {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(154, 155, 166, 1);
  line-height: 30rpx;
}

.main .right .com-cell .com-cell-body .params .amount {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(52, 209, 118, 1);
  line-height: 37rpx;
}

.main .right .com-cell .com-cell-body .params .price {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(251, 136, 54, 1);
  line-height: 40rpx;
  flex-shrink: 0;
}

.main .right .com-cell .com-cell-body .params .stepper {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.main .right .com-cell .com-cell-body .params .stepper .minus,
.main .right .com-cell .com-cell-body .params .stepper .plus {
  width: 40rpx;
  height: 40rpx;
}

.main .right .com-cell .com-cell-body .params .stepper image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.main .right .com-cell .com-cell-body .params .stepper .num {
  width: 30rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(52, 209, 118, 1);
  line-height: 40rpx;
  min-height: auto;
  height: auto;
}

.main .right .com-cell .com-cell-body .params .spec-btn {
  width: 101rpx;
  height: 40rpx;
  background: rgba(52, 209, 118, 1);
  border-radius: 21rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  text-align: center;
}

.spec-popup .com-cell {
  padding: 30rpx 20rpx 20rpx;
  position: relative;
}

.spec-popup .com-cell+.com-cell::after {
  content: " ";
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 0;
  height: 1px;
  border-top: 1px solid #eee;
  color: #eee;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.spec-popup .com-cell-head image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.spec-popup .com-cell .com-cell-body .title {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.spec-popup .com-cell .com-cell-foot {
  align-items: stretch;
}

.spec-popup .spec-list-group {
  width: 100%;
}

.spec-popup .spec-list-group .spec-list {
  display: flex;
  padding: 0 0 15rpx;
}

.spec-popup .spec-list-group .spec-list:last-child {
  padding: 0;
}

.spec-popup .spec-list-group .spec-list .spec-list-head {
  padding-right: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  flex-shrink: 0;
}

.spec-popup .spec-list-group .spec-list .spec-list-body {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.spec-popup .spec-list-group .spec-list .spec-list-body .spec-param {
  min-width: 155rpx;
  height: 50rpx;
  background: rgba(246, 247, 249, 1);
  border-radius: 28rpx;
  border: 1px solid rgba(246, 247, 249, 1);
  font-size: 26rpx;
  font-weight: 500;
  color: #ccc;
  text-align: center;
  line-height: 50rpx;
  margin-bottom: 15rpx;
  margin-right: 20rpx;
}

.spec-popup .spec-list-group .spec-list .spec-list-body .spec-param.active {
  border: 1px solid rgba(133, 212, 166, 1);
  color: rgba(52, 209, 118, 1);
  background: rgba(52, 209, 118, 0);
}

.spec-popup .good-info {
  flex-direction: column;
}

.spec-popup .good-info .com-cell-head {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-bottom: 10rpx;
}

.spec-popup .good-info .com-cell-body {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.spec-popup .params {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.spec-popup .params .price {
  font-size: 37rpx;
}

.spec-popup .params  .stepper {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.spec-popup .params  .stepper .minus, .spec-popup .params  .stepper .plus {
  width: 40rpx;
  height: 40rpx;
}

.spec-popup .params  .stepper image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.spec-popup .params  .stepper .num {
  width: 30rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(52, 209, 118, 1);
  line-height: 40rpx;
  min-height: auto;
  height: auto;
}

.shadow {
  padding: 25rpx 20rpx !important;
  box-shadow: 0px 2px 10px 0px rgba(238, 238, 238, 1);
}

.shadow::after {
  display: none;
}

.cart-popup .com-cell {
  position: relative;
}

.cart-popup .com-cell+.com-cell::after {
  content: " ";
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 0;
  height: 1px;
  border-top: 1px solid #eee;
  color: #eee;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.cart-popup .cart-head {
  text-align: right;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: flex-end;
  background: rgba(246, 247, 249, 1);
}

.cart-popup .cart-body {
  max-height: 450rpx;
  overflow: auto;
}

.cart-popup .cart-head image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 9rpx;
}

.cart-popup .cart-head .clean {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.cart-popup .com-cell {
  padding: 16rpx 20rpx;
}

.cart-popup .com-cell .com-cell-head {
  width: 65%;
  flex-shrink: 0;
  flex-direction: column;
}

.cart-popup .com-cell .com-cell-body {
  justify-content: center;
}

.cart-popup .com-cell .com-cell-body .price {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(251, 136, 54, 1);
  line-height: 40rpx;
}

.cart-popup .com-cell .com-cell-head .title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.cart-popup .com-cell .com-cell-head .desc {
  -webkit-line-clamp: 1;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.cart-popup .com-cell .com-cell-head>view {
  width: 100%;
}

.cart-popup   .stepper {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cart-popup   .stepper .minus, .cart-popup   .stepper .plus {
  width: 40rpx;
  height: 40rpx;
}

.cart-popup   .stepper image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.cart-popup   .stepper .num {
  width: 30rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(52, 209, 118, 1);
  line-height: 40rpx;
  min-height: auto;
  height: auto;
}

.qr-popup {
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding: 38rpx 30rpx;
  width: 90%;
  /* position: relative; *//* height:80%; */
  overflow-y: visible !important;
}

.qr-popup .qr {
  /* max-height: 100%;
  overflow: auto; */
}

.qr-popup .qr-head .title {
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin-bottom: 13rpx;
}

.qr-popup .qr-body .com-cell {
  flex-direction: column;
  padding: 0;
}

.qr-popup .qr-body .com-cell>view {
  width: 100%;
}

.qr-popup .qr-body .com-cell .com-cell-head {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-top: 17rpx;
  margin-bottom: 9rpx;
}

.qr-popup .qr-body .com-cell .com-cell-body {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.qr-popup .qr-body .com-cell .com-cell-body>view {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.qr-popup .qr-body .com-cell .com-cell-body image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 13rpx;
}

.qr-popup .qr-body .com-cell.call-item .com-cell-body {
  flex-direction: row;
  justify-content: space-between;
}

.qr-popup .qr-body .com-cell.call-item .com-cell-body .text {
  flex: 1;
}

.qr-popup .qr-body .com-cell.call-item .com-cell-body .call-btn {
  width: 120rpx;
  height: 42rpx;
  background: linear-gradient(90deg, rgba(7, 215, 101, 1) 0%, rgba(52, 209, 118, 1) 100%);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 42rpx;
  text-align: center;
}

.qr-popup .qr-foot {
  margin-top: 20rpx;
  position: relative;
  padding-top: 20rpx;
}

.qr-popup .qr-foot::after {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 1px;
  border-top: 1px solid #eee;
  color: #eee;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.qr-popup .qr-foot .qr-image {
  text-align: center;
}

.qr-popup .qr-foot .qr-image image {
  width: 252rpx;
  height: 252rpx;
}

.qr-popup .qr-foot .qr-image view {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.qr-popup .close {
  position: absolute;
  bottom: -80rpx;
  left: 50%;
  margin-left: -22rpx;
}

<view class='page high-tea-page'>
  <view class='banner'>
    <swiper indicator-dots="{{indicatorDots}}" circular="{{circular}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style='height:{{swiperheight}}px'>
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" bindload="imgHeight" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='set'>
    <view class='set-title'>
      标准套餐
    </view>
    <view class='content'>
      <swiper style='height:{{setHeight}}rpx;' indicator-dots="true" indicator-color="#34D176" indicator-active-color="rgba(52,209,118,.2)">
        <block wx:for="{{standard}}" wx:for-index="idx" wx:for-item="item" wx:key="key">
          <swiper-item class="slide-item">
            <block wx:if="{{idx==0}}">
              <view class='row' id='setHeight'>
                <block wx:for="{{item}}" wx:for-index="idx2" wx:for-item="item2" wx:key="key2">
                  <view class='col' bindtap="url" data-url="/pages/detail/index">
                    <image src='{{item2.imgUrl}}' mode='widthFix'></image>
                    <view class='title'>
                      {{item2.title}}
                    </view>
                    <view class='price'>
                      ¥{{item2.price}}
                    </view>
                  </view>
                </block>
              </view>
            </block>
            <block wx:if="{{idx!=0}}">
              <view class='row'>
                <block wx:for="{{item}}" wx:for-index="idx2" wx:for-item="item2" wx:key="key2">
                  <view class='col' bindtap="url" data-url="/pages/detail/index">
                    <image src='{{item2.imgUrl}}' mode='widthFix'></image>
                    <view class='title'>
                      {{item2.title}}
                    </view>
                    <view class='price'>
                      ¥{{item2.price}}
                    </view>
                  </view>
                </block>
              </view>
            </block>


          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class='set'>
    <view class='set-title'>
      自选套餐
    </view>
    <view class='content'>
      <scroll-view scroll-x="true">
        <view class='row'>
          <block wx:for="{{customize}}" wx:for-index="idx2" wx:for-item="item2" wx:key="key2">
            <view class='col' bindtap="url" data-url="/pages/detail/index">
              <image src='{{item2.imgUrl}}' mode='widthFix'></image>
              <view class='title'>
                {{item2.title}}
              </view>
              <view class='price'>
                ¥{{item2.price}}
              </view>
            </view>
          </block>
        </view>
      </scroll-view>
    </view>
  </view>
</view>












<co-ipx />

/* pages/high-tea/detail/detail.wxss */

canvas {
  position: fixed;
  top: 0;
  left: 999px;
}

page {
  background: #f6f7f9;
}

.order-detail-page {
  padding: 20rpx 20rpx 0;
}

.com-cell-group {
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.com-cell-group+.com-cell-group {
  margin-top: 20rpx;
}

.com-cell-group .com-cell {
  padding: 20rpx;
  position: relative;
}

.com-cell-group .com-cell+.com-cell::before {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  bottom: auto;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #eee;
}

.com-cell-group .com-cell .com-cell-head image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}

.com-cell-group .com-cell .com-cell-body {
  flex-direction: column;
  justify-content: space-between;
  padding: 5rpx 0;
  overflow: hidden;
}

.com-cell-group .com-cell .com-cell-body .item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.com-cell-group .com-cell .com-cell-body .item .title {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.com-cell-group .com-cell .com-cell-body .item .price {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.com-cell-group .com-cell .com-cell-body .item .params {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(154, 155, 166, 1);
}

.com-cell-group .com-cell .com-cell-body .item .amount {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(154, 155, 166, 1);
}

.com-cell-group .com-cell.order-group-title {
  padding: 20rpx 30rpx;
}

.com-cell-group .com-cell.order-group-title .com-cell-head image {
  width: 120rpx;
  height: 90rpx;
  margin-right: 10rpx;
}

.com-cell-group .com-cell.order-group-title .com-cell-body {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.com-cell-group .com-cell.order-group-title .com-cell-arrow {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(52, 209, 118, 1);
}

.com-cell-group .com-cell .com-cell-input {
  flex: 1;
  display: block;
}

.com-cell-group .com-cell.total-cell {
  flex-direction: column;
}

.com-cell-group .com-cell.total-cell .com-cell-item {
  justify-content: space-between;
  font-size: 24rpx;
}

.com-cell-group .com-cell.total-cell .com-cell-item+.com-cell-item {
  padding-top: 20rpx;
}

.com-cell-group .com-cell.total-cell .com-cell-item .label {
  color: rgba(153, 153, 153, 1);
}

.com-cell-group .com-cell.total-cell .com-cell-item .value {
  color: rgba(102, 102, 102, 1);
}

.com-cell-group .com-cell.total-cell .com-cell-text {
  width: 100%;
  justify-content: flex-end;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 20rpx;
  padding-top: 20rpx;
  position: relative;
}

.com-cell-group .com-cell.total-cell .com-cell-text::after {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: auto;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #eee;
}

.com-cell-group .com-cell.total-cell .com-cell-text .price {
  font-size: 30rpx;
  padding-left: 10rpx;
}

.contact {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 0;
  line-height: 80rpx;
}

.contact + .com-cell-group {
  margin-top: 20rpx;
}

.contact::after {
  display: none;
}

.info-group .com-cell {
  flex-direction: column;
}

.info-group .com-cell-head {
  position: relative;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  padding-bottom: 20rpx;
}

.info-group .com-cell-head .dot {
  width: 14rpx;
  height: 14rpx;
  background: rgba(52, 209, 118, 1);
  border-radius: 50%;
  left: 8rpx;
  margin: 0 15rpx;
}

.info-group .com-cell-body .item {
  font-size: 24rpx;
}

.info-group .com-cell-body .item +.item {
  margin-top: 20rpx;
}

.info-group .com-cell-body .item .label {
  color: rgba(153, 153, 153, 1);
  flex-shrink: 0;
  width: 156rpx;
}

.info-group .com-cell-body .item .value {
  color: rgba(102, 102, 102, 1);
  flex: 1;
}

.status {
  background: #fff;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.status .title {
  font-size: 38rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 53rpx;
}

.status .subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33px;
}

.status .btn {
  width: 170rpx;
  line-height: 54rpx;
  border-radius: 6rpx;
  display: inline-block;
  border: 1px solid rgba(153, 153, 153, 1);
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.status .btn+.btn {
  margin-left: 20rpx;
}

.save-btn {
  padding: 20rpx;
}

.save-btn button {
  background: linear-gradient(90deg, rgba(7, 215, 101, 1) 0%, rgba(52, 209, 118, 1) 100%);
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 90rpx;
}

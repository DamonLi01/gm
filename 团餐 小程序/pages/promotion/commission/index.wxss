/* pages/promotion/commission/index.wxss */

.com-cell-group .com-cell {
  padding: 32rpx 20rpx;
  position: relative;
}

.com-cell-group .com-cell::before {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: auto;
  left: 0;
  right: 0;
  bottom: 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #eee;
}

.com-cell-group .com-cell .com-cell-body {
  align-items: stretch;
  flex-direction: column;
  overflow: hidden;
}

.com-cell-group .com-cell .com-cell-body .item {
  display: flex;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(143, 144, 158, 1);
  overflow: hidden;
}

.com-cell-group .com-cell .com-cell-body .item+.item {
  margin-top: 5rpx;
}

.com-cell-group .com-cell .com-cell-body .item .title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(11, 13, 44, 1);
}

.com-cell-group .com-cell .com-cell-body .item .review {
  width: 96rpx;
  line-height: 34rpx;
  background: rgba(255, 249, 246, 1);
  border-radius: 10rpx 0px 10rpx 0px;
  border: 1px solid rgba(253, 192, 149, 1);
  text-align: center;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(251, 136, 54, 1);
  flex-shrink: 0;
  margin: 0 16rpx;
}

.com-cell-group .com-cell .com-cell-foot .price {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(251, 136, 54, 1);
}

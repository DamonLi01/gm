.com-cell-group {
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  /* margin-top: 20rpx; */
}

.com-cell-group+.com-cell-group {
  margin-top: 20rpx;
}

.com-cell-group .com-cell {
  padding: 25rpx 20rpx;
  position: relative;
}

.com-cell-group .com-cell::before {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: auto;
  left: 0;
  right: 0;
  bottom: 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #eee;
}

.com-cell-group .com-cell .com-cell-head image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}

.com-cell-group .com-cell .com-cell-body {
  /* flex-direction: column;
  justify-content: space-between; *//* padding: 5rpx 0; */
  overflow: hidden;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-right: 10rpx;
}

.com-cell-group .com-cell .com-cell-foot {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}


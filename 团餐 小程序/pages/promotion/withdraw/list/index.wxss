.com-cell-group .com-cell .com-cell-head {
  margin-right: 10rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.com-cell-group .com-cell .com-cell-body {
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  /* padding: 5rpx 0; */
  overflow: hidden;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.com-cell-group .com-cell.withdraw-group-title {
  padding: 0 0 5rpx;
}

.com-cell-group .com-cell.withdraw-group-title .com-cell-head image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  /* border: 1px solid; */
  border-radius: 50%;
  overflow: hidden;
}

.com-cell-group .com-cell.withdraw-group-title .com-cell-body {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  flex-direction: row;
}

.com-cell-group .com-cell.withdraw-group-title .com-cell-foot {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(251, 136, 54, 1);
}

.com-cell-group .com-cell .com-cell-input {
  flex: 1;
  display: block;
}

.com-cell-group .com-cell.total-cell {
  flex-direction: column;
}

.com-cell-group .com-cell.total-cell .com-cell-text {
  width: 100%;
  justify-content: flex-end;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.com-cell-group .com-cell.total-cell .com-cell-text .price {
  font-size: 30rpx;
  padding-left: 10rpx;
}

.com-cell-group .com-cell.total-cell .com-cell-btn {
  justify-content: flex-end;
  margin-top: 14rpx;
}

.com-cell-group .com-cell.total-cell .com-cell-btn view {
  width: 170rpx;
  line-height: 54rpx;
  border-radius: 6rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.com-cell-group .com-cell.total-cell .com-cell-btn view+view {
  margin-left: 15rpx;
}

.withdraw-list {
  background: rgba(246, 247, 249, 1);
  overflow: hidden;
  padding: 20rpx;
}

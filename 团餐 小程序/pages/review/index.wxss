/* pages/review/index.wxss */

.review-page {
  background: #fff;
  padding: 20rpx;
}

.review-page .review-content {
  text-align: center;
}

.review-page image {
  margin: 154rpx auto 40rpx;
  width: 376rpx;
}

.review-page .review-content .title {
  font-size: 38rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  padding: 10rpx 0;
}

.review-page .review-content .subtitle {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 0;
}

.review-page .review-content .refresh-btn {
  margin-top: 106rpx;
}

.review-page .review-content .refresh-btn button {
  line-height: 90rpx;
  background: linear-gradient(90deg, rgba(7, 215, 101, 1) 0%, rgba(52, 209, 118, 1) 100%);
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
